<section id="pw" class="wrapper">
  <div class="inner alt">
    <header class="major">
      <h2>Forgot your password?</h2>
    </header>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>
        <br />

        <div class="actions">
          <%= f.submit "Send me reset password instructions", :class => "button special" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>